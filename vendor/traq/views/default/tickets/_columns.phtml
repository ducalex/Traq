		<?php } ?>
		<?php foreach($custom_fields as $column) { ?>
			<?php echo Form::checkbox("columns[{$column->id}]", $column->id, array('checked' => in_array($column->name, $columns)))?>
			<?php echo Form::label($column->name, "columns[{$column->id}]")?>
		<?php } ?>
		<div class="actions">
			<?php echo Form::submit(l('update'), 'update_columns'); ?>
		</div>
		</div>
	</fieldset>
</form>
