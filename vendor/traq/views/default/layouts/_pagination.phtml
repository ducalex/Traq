<?php if ($pagination->paginate) { ?>
<div class="content">
	<div class="pagination">
	<?php
	if ($pagination->prev_page_url) {
		if ($pagination->first_page_url != $pagination->prev_page_url) {
			echo HTML::link(l('first'), $pagination->first_page_url, array('class' => 'button_previous prev_link first_link'), false);
		}
		echo HTML::link(l('previous'), $pagination->prev_page_url, array('class' => 'button_previous prev_link'), false);
	}
	if ($pagination->next_page_url) {
		if ($pagination->last_page_url != $pagination->next_page_url) {
			echo HTML::link(l('last'), $pagination->last_page_url, array('class' => 'button_next next_link last_link'), false);
		}
		echo HTML::link(l('next'), $pagination->next_page_url, array('class' => 'button_next next_link'), false);
	}

	foreach($pagination->pages as $page => $link) {
		if ($page == $pagination->page) {
			$class = 'page_link active_page';
		} elseif ($page < $pagination->page) {
			$class = 'page_link button_previous';
		} else {
			$class = 'page_link button_next';
		}
		echo HTML::link($page, $link, array('class' => $class), false);
	}
	?>
	</div>
</div>
<?php } ?>
