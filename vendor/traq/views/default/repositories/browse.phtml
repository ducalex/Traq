	<table class="list">
	<thead>
		<tr>
			<th style="width:30%"><?= l('name') ?></th>
			<th style="width:2% "></th>
			<th style="width:10%"><?= l('size') ?></th>
			<th style="width:10%"><?= l('date') ?></th>
